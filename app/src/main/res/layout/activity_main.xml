<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:textSize="32dp"
            android:layout_margin="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/kurang"
    />

    <EditText
            android:id="@+id/edittext"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_above="@id/tambah"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
    />

    <Button
            android:id="@+id/tambah"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="48dp"
            android:layout_marginLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/angka"
    />

    <Button
            android:id="@+id/kurang"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="48dp"
            android:layout_marginLeft="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/angka"
    />

    <TextView
            android:id="@+id/angka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="64dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="100dp"
            android:layout_alignParentLeft="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerInParent="true"
    />

    <EditText
            android:id="@+id/edittextdua"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_above="@id/tambahdua"
            android:textSize="24dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
    />

    <Button
            android:id="@+id/tambahdua"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="48dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/angka"
    />

    <Button
            android:id="@+id/kurangdua"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="48dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/angka"
    />

    <TextView
            android:id="@+id/angkadua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="64dp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="100dp"
            android:layout_alignParentRight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerInParent="true"
    />

    <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/basketimage"
    />

</RelativeLayout>